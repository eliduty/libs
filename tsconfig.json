{
  "extends": ["@eliduty/tsconfig"],
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/*":["./*"],
      "@eliduty/request": ["./packages/request/src/index.ts"],
      "@eliduty/storage": ["./packages/storage/src/index.ts"],
      "@eliduty/type": ["./packages/type/src/index.ts"],
      "@eliduty/validator": ["./packages/validator/src/index.ts"]
    }
  },
  "include": ["**/src/**/*.ts", "**/src/**/*.d.ts", "**/src/**/*.tsx", "**/src/**/*.vue","types/*.d.ts","mocks/**/*.ts","**/tests/**/*.ts"],
  "exclude": ["**/dist/**", "**/node_modules/**"],
}
