{
  "extends": ["@eliduty/tsconfig"],
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/*":["./*"],
      "@eliduty/*": ["./packages/*/src/index.ts"],
    }
  },
  "exclude": ["**/dist/**", "**/node_modules/**"],
  "include": ["**/src/**/*.ts", "**/src/**/*.d.ts", "**/src/**/*.tsx", "**/src/**/*.vue","types/*.d.ts","mocks/**/*.ts","**/tests/**/*.ts"],
}
